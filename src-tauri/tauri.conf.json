{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.pc.whatsappgpt",
  "productName": "WhatsappGPT",
  "version": "1.0.0",

  "app": {
    "security": { "csp": null },
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "WhatsappGPT",
        "width": 1100,
        "height": 800,
        "url": "https://web.whatsapp.com"
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico"],
    "resources": ["icons"],
    "windows": {
      "webviewInstallMode": { "type": "downloadBootstrapper", "silent": true }
    }
  }
}